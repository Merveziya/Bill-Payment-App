<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/blankFrameLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragmentAlert"
    android:background="#40000000">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_marginTop="150dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:background="@drawable/alert_view_corner">

        <TextView
            android:id="@+id/faturaDoku"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="50dp"
            android:text="Bu faturaya ait döküman numarası XXXXXXX’dir. Bu numaraya istinaden işlemlerinizi gerçekleştirebilirsiniz."
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            android:background="@drawable/gradientyellow"
            android:id="@+id/buttonAlertView"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:text="tamam" />

        <TextView
            android:id="@+id/dokumNumarasi"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="100dp"
            android:text="Döküman Numarası"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_marginLeft="110dp"
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ep_warning_filled" />
    </FrameLayout>

</FrameLayout>